# ==========================================
# 10. TEST CSRF (Cross-Site Request Forgery)
# ==========================================
# Kịch bản: Gửi POST request mà không có CSRF Token
# Vì bạn đã tắt CSRF (.disable), request này sẽ THÀNH CÔNG (201).
# Trong báo cáo, bạn giải thích đây là REST API Stateless nên disable là hợp lý.
POST {{baseUrl}}
Content-Type: application/json

{
  "name": "Sản phẩm CSRF Attack",
  "price": 1000,
  "quantity": 1,
  "categoryId": 1
}

> {%
    client.test("CSRF Check", function() {
        if (response.status === 201) {
            client.log("ℹ️ INFO: Request thành công. CSRF đang tắt (Đúng với thiết kế REST API).");
            // Xóa ID rác vừa tạo để dọn dẹp
            client.global.set("csrfProductId", response.body.id);
        } else if (response.status === 403) {
            client.log("✅ AN TOÀN: CSRF đang bật, request bị chặn.");
        }
    });
%}

